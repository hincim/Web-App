@model ProductDetailModel

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">
        <h5 class="mb-3">@Model.Product.Name</h5> <hr>

        @foreach (var category in Model.Categories)
        {
            <a asp-controller="shop" asp-action="list" asp-route-category="@category.Url" class="btn btn-link p-0 mb-3">@category.Name</a>
        }

        <div class="mb-3">
            <h4 class="text-primary mb-3">@Model.Product.Price<i class="fas fa-lira-sign"></i></h4>
            <button type="submit" class="btn btn-primary btn-lg">Add to Cart</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Model.Product.Description</p>
    </div>
</div>
