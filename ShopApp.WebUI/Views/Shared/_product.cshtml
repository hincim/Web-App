@using ShopApp.WebUI.Models;
@model Product;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="card mb-2"> 
    <img class="card-img-top" src="~/img/@Model.ImageUrl">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm">İncele</a>
        <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm">Güncelle</a>
    </div>
</div>