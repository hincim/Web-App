@model List<Category>;

@{
    var categories = Model;
}

<div class="list-group">
   <a href="/product/list/" class="list-group-item list-group-item-action">Tüm Kategoriler</a>

    @foreach (var category in categories)
    {
         <a href="/product/list/@category.CategoryId" class="list-group-item list-group-item-action
@(ViewBag.SelectedCategory == category.CategoryId.ToString() ? "active": "")">@category.Name</a>
    }
</div>